<div class="content-wrapper">
           

        <div class="container-xxl flex-grow-1 container-p-y">

            <div class="card m-7 p-3">
                <p class="p-3 alert alert-info text-center">ثبت رنگ </p>
                @if(ViewBag.error !=null && ViewBag.error!=" ")
                {
                    <p class="alert alert-danger text-center m-3 p-3 ">@ViewBag.error</p>


                }
                
                <form action="/admin/product/color" method="post">
                <div class="row ">
                    
                    <div class="col-lg-6 col-md-6 co-xl-6 col-12">
                        <input name="ColorName" type="text" class="form-control" placeholder="نام رنگ را وارد کنید">

                    </div>
                    <div class="col-lg-6 col-md-6 co-xl-6 col-12" >
                        <button class="btn btn-warning ">ثبت رنگ </button>
                        </form>

                    </div>

                </div>
                
                <hr>
                <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">زدیف</th>
      <th scope="col">نام رنگ </th>
      <th scope="col">عملیات</th>
    </tr>
  </thead>
  <tbody>
    @{
int i =1;

    }

    @foreach(var item in ViewBag.list){
    <tr>
      <th scope="row">@i</th>
      <td>@item.ColorName</td>
      <td>
        <a href="/admin/product/deletecolor/@item.Id" class="btn btn-danger" onclick="return confirm('ایا از حذف خود اطمینان دارید')">حذف</a class=>
      </td>
      
 </tr>
 i++;
 }
  </tbody>
</table>


            </div>

            



        </div>

</div>